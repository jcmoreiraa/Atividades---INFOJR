generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bread {
  id       Int       @id @default(autoincrement())
  name     String
  price    Float
  quantity Int
  order    OrderList @relation(fields: [orderId], references: [id])
  orderId  Int

  @@map("bread")
}

model OrderList {
  id         Int     @id @default(autoincrement())
  clientName String
  breadItems Bread[]
  finished   Boolean @default(false)

  @@map("orderList")
}
